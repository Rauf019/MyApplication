<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:layout_width="wrap_content"
        android:defaultValue="i am busy right now , i will call you later"
        android:ems="4"
        android:inputType="text"
        android:key="temple"
        android:maxEms="4"

        android:summary="Enter text template"
        android:title="Text template"

        />
    <ListPreference
        android:defaultValue="1"
        android:entries="@array/duration"
        android:entryValues="@array/duration"
        android:key="duration"
        android:summary="Enter time duration "
        android:title="Duration"


        />


</PreferenceScreen>